<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />-->

  <GridLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:rowCount="7"
      android:columnCount="2">

      <LinearLayout
          android:layout_row="0"
          android:layout_column="0"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:orientation="vertical">
        <EditText
            android:id="@+id/editName"
            android:layout_width="wrap_content"
            android:width="150dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:inputType="textCapWords"/>
          <EditText
              android:id="@+id/editAge"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Age"
              android:width="150dp"
              android:inputType="textCapWords"/>
          <Button
              android:onClick="removeClassmate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/addClassmates"
              android:orientation="vertical"
              android:text="Add classmates"/>
      </LinearLayout>

      <LinearLayout
          android:layout_row="0"
          android:layout_column="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:orientation="vertical">
          <EditText
              android:id="@+id/editYear"
              android:width="150dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Year"/>
          <EditText
              android:id="@+id/editMileage"
              android:width="150dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Mileage"/>
          <EditText
              android:id="@+id/eeditColor"
              android:width="150dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Color"/>
          <EditText
              android:id="@+id/editHelm"
              android:width="150dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Helm"/>
          <Button
              android:onClick="addCars"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/addCCars"
              android:orientation="vertical"
              android:text="Add Cars"/>
      </LinearLayout>



     <LinearLayout
         android:layout_column="0"
        android:layout_row="2"
         android:padding="20dp"
         android:id="@+id/classmates"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <TextView
             android:layout_width="wrap_content"
             android:layout_gravity="fill_horizontal"
             android:layout_height="wrap_content"
             android:text="Группа"
             android:textAllCaps="true"
             android:textSize="17dp"
             android:padding="10dp"
             android:layout_columnSpan="2"
             />

     </LinearLayout>
      <LinearLayout
          android:layout_column="1"
          android:layout_row="3"
          android:padding="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <Button
              android:onClick="removeClassmate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/removeClassmates"
              android:orientation="vertical"
              android:text="Remove users"/>
      </LinearLayout>

      <LinearLayout
          android:layout_column="1"
          android:layout_row="5"
          android:layout_columnSpan="2"
          android:padding="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <Button
              android:onClick="removeCars"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/removeCars"
              android:orientation="vertical"
              android:text="Remove Cars"/>

      </LinearLayout>




      <LinearLayout
          android:layout_column="0"
          android:layout_row="4"
          android:padding="20dp"

          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/cars"

          android:orientation="vertical">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Автосалон"
              android:textAllCaps="true"
              android:textSize="17dp"
              android:padding="10dp"/>

      </LinearLayout>

  </GridLayout>








</ScrollView>
